<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Таблица Customer -->
    <changeSet id="1" author="dev">
        <createTable tableName="customer">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_customer"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(255)"/>
            <column name="street" type="VARCHAR(255)"/>
            <column name="zipcode" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <!-- Таблица Orders -->
    <changeSet id="2" author="dev">
        <createTable tableName="orders">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_order"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints foreignKeyName="fk_order_customer"
                             referencedTableName="customer"
                             referencedColumnNames="id"/>
            </column>
            <column name="date" type="TIMESTAMP"/>
            <column name="status" type="VARCHAR(50)"/>
            <column name="quantity_value" type="INT"/>
            <column name="tax_status" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

    <!-- Таблица Payment (SINGLE_TABLE стратегия) -->
    <changeSet id="3" author="dev">
        <createTable tableName="payment">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_payment"/>
            </column>
            <column name="payment_type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="FLOAT"/>
            <!-- Поля для Cash -->
            <column name="cash_tendered" type="FLOAT"/>
            <!-- Поля для Check -->
            <column name="check_name" type="VARCHAR(255)"/>
            <column name="bank_id" type="VARCHAR(255)"/>
            <!-- Поля для Credit -->
            <column name="credit_number" type="VARCHAR(255)"/>
            <column name="credit_type" type="VARCHAR(50)"/>
            <column name="exp_date" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- Таблица Item -->
    <changeSet id="4" author="dev">
        <createTable tableName="item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_item"/>
            </column>
            <column name="shipping_weight" type="NUMERIC(10, 2)"/>
            <column name="description" type="TEXT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>